<resources>
	
	<style name="AppTheme.Base.Library" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowContentTransitions">true</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
	</style>
	
	<style name="AppTheme.Default.Library" parent="AppTheme.Base.Library">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">@color/white</item>
	</style>
	
	<!-- set the rounded drawable as background to your bottom sheet -->
	<style name="BottomSheet.NoBackground" parent="@style/Widget.Design.BottomSheet.Modal">
		<item name="android:background">@android:color/transparent</item>
		<item name="behavior_peekHeight">200dp</item>
		<item name="behavior_fitToContents">false</item>
	</style>
	
	<style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
		<item name="android:background">@drawable/bottom_sheet_background</item>
		<item name="behavior_peekHeight">200dp</item>
		<item name="behavior_fitToContents">false</item>
	</style>
	
	<style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
		<item name="android:windowIsFloating">false</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="bottomSheetStyle">@style/BottomSheet</item>
	</style>
	
	<style name="BaseBottomSheetDialog.NoBackground" parent="@style/Theme.Design.Light.BottomSheetDialog">
		<item name="android:windowIsFloating">false</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="bottomSheetStyle">@style/BottomSheet.NoBackground</item>
	</style>
	
	<style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />
	
	<style name="BottomSheetDialogTheme.NoBackground" parent="BaseBottomSheetDialog.NoBackground" />
	
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
	
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
